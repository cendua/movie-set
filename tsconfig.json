{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "styles/*": ["./src/assets/css/*"],
      "types": ["element-plus/global", "pinia-plugin-persist"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
